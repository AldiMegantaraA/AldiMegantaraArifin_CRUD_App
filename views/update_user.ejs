<!-- ======= include header ====== -->
<%- include('include/_header') %>
<!-- ======= End include header ====== -->

<!-- === Main === -->
<main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
            <div class="filter">
                <a href="/"><i class="fas fa-angle-double-left"></i> All Users</a>
            </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">Update User</h2>
            <span class="text-light">Use form below to update an account</span>
        </div>
        <!-- form -->
        <form method="POST" id="update_user">
            <div class="new_user">
                <div class="form-group">
                    <label for="userName" class="text-light">Name</label>
                    <input type="hidden" name="id" value="<%= user._id %>">
                    <input type="text" name="userName" value="<%= user.userName %>" placeholder="Aldi Megantara">
                </div>
                <div class="form-group">
                    <label for="accountNumber" class="text-light">Account Number</label>
                    <input type="number" name="accountNumber" value="<%= user.accountNumber %>" placeholder="1112323">
                </div>
                <div class="form-group">
                    <label for="emailAdress" class="text-light">Email</label>
                    <input type="text" name="emailAdress" value="<%= user.emailAdress %>" placeholder="AldiMegantara@gmail.com">
                </div>
                <div class="form-group">
                    <label for="identityNumber" class="text-light">Identity Number</label>
                    <input type="number" name="identityNumber" value="<%= user.identityNumber %>" placeholder="1234567">
                </div>
                <div class="form-group">
                    <label for="status" class="text-light">Status</label>
                    <div class="radio inline">
                        <input type="radio" id="active" name="status" value="Active" <%= user.status == 'Active' ? 'checked' : '' %>>
                        <label for="active" class="radio-label">Active</label>
                    </div>
                    <div class="radio inline">
                        <input type="radio" id="incative" name="status" value="Inactive" <%= user.status == 'Inactive' ? 'checked' : '' %>>
                        <label for="incative" class="radio-label">Inactive</label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn text-dark update">Save</button>
                </div>
            </div>
        </form>
        
    </div>
</main>

<!-- === End Main === -->

<!-- ======= include footer ====== -->
<%- include('include/_footer') %>
<!-- ======= End include footer ====== -->